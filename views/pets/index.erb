<h2 class="pets"> Creature Comforts' Pets </h2>

<form class="filterpet" action="/pets/registration" method="post">


    <label for="registration"></label>
    <select id="registration" name="registration">
      <option value="All">All</option>
      <option value="Registered">Registered</option>
      <option value="Not Registered">Not Registered</option>
    </select>

    <input class="submit-button" type='submit' value="Filter Pets"/>

</form>

<form method="get" action="/pets/new">
  <input class="petbtn" type="submit" value="Add Pet"/>
</form>

<table>
  <tr>
    <th>Name</th>
    <th>Vet</th>
    <th>Species</th>
    <th>View Pet</th>
  </tr>
  <% for pet in @pets %>
  <tr>
    <td><%= pet.name %></td>
    <% if pet.vet_details != 0 %>
     <td><%= pet.find_vet().name %></td>
    <% else %>
      <td> No Vet </td>
    <% end %>
    <td><%= pet.species %></td>
    <td><a href="/pets/<%= pet.id %>">View Pet</a></td>
  </tr>
  <% end %>
</table>
