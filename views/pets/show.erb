<h2> <%= @pet.name %> </h2>

<img src=<%= @pet.url %> alt="<%= @pet.name %>" height="300" width="300" >

<h3> Date Of Birth: <%= @pet.dob %> </h3>
<h3> Species: <%= @pet.species %> </h3>
<h3> Owner: <a href="/owners/<%= @pet.find_owner.id %>"><%= @pet.find_owner.name %> </a></h3>
<h3> Vet: <%= @pet.find_vet.name %> </h3>
<h3> Treatment Notes: <%= @pet.treatment_notes %> </h3>

<form method="post" action="/pets/<%= @pet.id %>/delete">
  <input type="submit" value="Delete Pet"/>
</form>

<form method="get" action="/pets/<%= @pet.id %>/edit">
  <input type="submit" value="Edit Pet" />
</form>
