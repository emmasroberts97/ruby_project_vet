<h2> <%= @pet.name %> </h2>

<section class="showpet">
<img src=<%= @pet.url %> alt="<%= @pet.name %>" height="300" width="300" class="pet" >

<h3 class="petdetails"> Date Of Birth: <%= @pet.dob %> </h3>
<h3 class="petdetails"> Species: <%= @pet.species %> </h3>
<h3 class="petdetails"> Owner: <a href="/owners/<%= @pet.find_owner.id %>"><%= @pet.find_owner.name %> </a></h3>
<h3 class="petdetails"> Vet: <%= @pet.find_vet.name %> </h3>
<h3 class="petdetails"> Treatment Notes: <%= @pet.treatment_notes %> </h3>

<form method="post" action="/pets/<%= @pet.id %>/delete">
  <input type="submit" value="Delete Pet"/>
</form>

<form method="get" action="/pets/<%= @pet.id %>/edit">
  <input type="submit" value="Edit Pet" />
</form>

</section>
