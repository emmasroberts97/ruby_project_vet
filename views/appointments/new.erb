<h2 class="createappointment"> Add a New Appointment </h2>

<form class="createappointment" action="/appointments" method="post">

    <label for="check_in">Check In:</label>
    <input id="check_in" type="date" name="check_in" >

    <label for="check_out">Check Out:</label>
    <input id="check_out" type="date" name="check_out" >

    <label for="pet_id">Select a Pet:</label>
    <select id="pet_id" name="pet_id">
      <% for pet in @pets %>
        <option value = <%= pet.id %> > <%= pet.name %> </option>
      <% end %>
    </select>

    <input class="submit-button" type='submit' value="Add Appointment"/>

</form>
